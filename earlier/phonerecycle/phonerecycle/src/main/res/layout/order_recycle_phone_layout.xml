<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/recycle_phone_name"
            android:text="你的手机XXX"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/recycle_phone_time"
            android:text="于 2013年8月25日11时"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/recycle_phone_price"
            android:text="以  4223 下单成功"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/recycle_phone_order"
            android:text="订单号：201408031040278410001"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <EditText
                android:id="@+id/recycle_verifi_code_edit"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:hint="验证码"
                android:background="@drawable/shape_home_marquee_tips_bg"/>

        <TextView
                android:id="@+id/recycle_get_verifi_code"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:singleLine="true"
                android:text="获取验证码"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/shape_toast_black_bg"/>
    </LinearLayout>

    <TextView
            android:id="@+id/recycle_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@drawable/login_blue_bg"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            android:text="确定"/>

    <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_below="@id/order_success_content"
            android:layout_height="1px"
            android:background="@color/gray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_success_tips1"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray"
                android:textSize="14sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_success_tips2"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray"
                android:textSize="14sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_success_tips3"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray"
                android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>

            