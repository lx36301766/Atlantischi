<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@android:color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@android:color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@android:color/colorAccent</item>-->
    </style>

    <style name="invoice_jumei_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="notification_item_text_style">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="notification_item_image_style">
        <item name="android:layout_width">31dp</item>
        <item name="android:layout_height">31dp</item>
    </style>
    <style name="notification_item_wrapper_style">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
