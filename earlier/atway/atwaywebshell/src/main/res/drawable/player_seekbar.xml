<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp" />

            <gradient
                android:angle="270"
                android:endColor="#b8ffffff"
                android:startColor="#b8ffffff" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="15dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#b8ff0000"
                    android:endColor="#b8ffffff"
                    android:startColor="#b8ffffff"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dp" />

                <gradient
                    android:angle="270"
                    android:endColor="#78ff8f80"
                    android:startColor="#b812bbf0"
                    />
            </shape>
        </clip>
    </item>

</layer-list>