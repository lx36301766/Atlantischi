<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            layout="@layout/common_title"/>

    <TextView
            android:text="手机号码："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/phone_edit"
            android:hint="请输入手机号"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            style="@style/modify_password_edit_item"/>

    <TextView
            android:text="短信验证码："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
                android:id="@+id/verifi_code_edit"
                android:inputType="number"
                android:hint="请输入验证码"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textColorHint="#88a9a9a9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

        <Button
                android:id="@+id/get_verifi_code_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_home_btn2_bg"
                android:text="获取验证码"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"/>

    </LinearLayout>

    <Button
            android:id="@+id/find_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_home_btn2_bg"
            android:text="找回密码"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"/>

</LinearLayout>