<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_invoice_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="小美提示"
        android:textColor="@color/cor_333333"
        android:textSize="17sp"
        android:gravity="center"/>

    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/jumei_gray_e3"/>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/jumeiblack"
            android:lineSpacingMultiplier="1.4"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="message"/>

        <LinearLayout
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/action_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/left_btn"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:textColor="#333333"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:background="@drawable/shopcar_submit_btn_reverse_bg"
            android:text="取消"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/right_btn"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_toRightOf="@+id/left_btn"
            android:background="@drawable/shopcar_submit_btn_bg_normal"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="确定"
            style="?android:attr/borderlessButtonStyle"/>

    </RelativeLayout>

</LinearLayout>

