<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/arrow"
            android:src="@drawable/home_arrow"
            android:visibility="gone"
            android:background="#79e6f0"
            android:contentDescription="@string/app_name"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_toLeftOf="@id/arrow"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:src="@drawable/phone_small_icon"
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/pager_item_title"
                    android:text=""
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
                android:background="@color/home_dividing_line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <include
                    android:id="@+id/price_item_1"
                    layout="@layout/home_phone_price_info_item"/>

            <View
                    android:background="@color/home_dividing_line_color"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

            <include
                    android:id="@+id/price_item_2"
                    layout="@layout/home_phone_price_info_item"/>

            <View
                    android:background="@color/home_dividing_line_color"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

            <include
                    android:id="@+id/price_item_3"
                    layout="@layout/home_phone_price_info_item"/>

            <View
                    android:background="@color/home_dividing_line_color"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

            <include
                    android:id="@+id/price_item_4"
                    layout="@layout/home_phone_price_info_item"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
