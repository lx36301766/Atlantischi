<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="登录"
            android:background="@drawable/all_title_bg"
            style="@style/title_text_common"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="35dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@drawable/ic_launcher"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/login_margin"
                    android:paddingRight="@dimen/login_margin"
                    android:gravity="center_vertical">

                <ImageView
                        style="@style/userIcon"
                        android:background="@drawable/user_icon"/>

                <EditText
                        android:id="@+id/user_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="请输入您的用户名"
                        android:layout_marginLeft="20dp"
                        android:textColorHint="@android:color/white"
                        android:background="@null"/>
            </LinearLayout>

            <ImageView
                    style="@style/line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="@dimen/login_margin"
                    android:paddingRight="@dimen/login_margin"
                    android:gravity="center_vertical">

                <ImageView
                        style="@style/userIcon"
                        android:background="@drawable/password_icon"/>

                <EditText
                        android:id="@+id/password_edit"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入您的密码"
                        android:layout_marginLeft="20dp"
                        android:textColorHint="@android:color/white"
                        android:background="@null"/>
            </LinearLayout>

            <ImageView
                    style="@style/line"/>

            <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/login_blue_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="@dimen/login_line_margin"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="登录"
                    android:textSize="25sp"/>

            <Button
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/circle_pink_register_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/login_line_margin"
                    android:layout_marginBottom="@dimen/login_line_margin"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="注册"
                    android:textSize="25sp"/>

            <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:text="忘记密码?"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>