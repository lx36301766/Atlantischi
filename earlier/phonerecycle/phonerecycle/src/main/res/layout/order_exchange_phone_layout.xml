<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eef8f9"
            android:orientation="vertical"
            android:id="@+id/order_success_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

        <TextView
                android:id="@+id/redem_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：42343523342342432423"
                style="@style/orders_success_text_sytle"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <TextView
                android:id="@+id/redem_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号：13880***1123"
                style="@style/orders_success_text_sytle"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <TextView
                android:id="@+id/redem_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间：2014年7月16日"
                style="@style/orders_success_text_sytle"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <TextView
                android:id="@+id/redem_phone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单产品：XXXXXXXXX"
                style="@style/orders_success_text_sytle"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <TextView
                android:id="@+id/redem_phone_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单金额：***元"
                style="@style/orders_success_text_sytle"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="请输入客户端验证码，完成交易"/>

        <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <EditText
                    android:id="@+id/redem_verifi_code_edit"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:hint="验证码"
                    android:background="@drawable/shape_home_marquee_tips_bg"/>

            <TextView
                    android:id="@+id/redem_get_verifi_code"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:text="重新获取(30)"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/shape_toast_black_bg"/>
        </LinearLayout>

        <TextView
                android:id="@+id/redem_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_home_btn2_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="提交完成交易"/>
    </LinearLayout>

    <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_below="@id/order_success_content"
            android:layout_height="1px"
            android:background="@color/gray"
            android:id="@+id/order_success_line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_below="@id/order_success_line"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_success_tips1"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray"
                android:textSize="14sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_success_tips2"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray"
                android:textSize="14sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_success_tips3"
                android:layout_marginTop="15dp"
                android:textColor="@color/gray"
                android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>