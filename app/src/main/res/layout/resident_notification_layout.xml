<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/app_icon"
        android:src="@drawable/icon_short_cut"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="13.3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/notification_shortcut_wrapper"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/app_icon"
        android:layout_toLeftOf="@+id/notification_shortcut_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/notification_shortcut_0"
            style="@style/notification_item_wrapper_style">
            <ImageView
                android:id="@+id/notification_shortcut_icon_0"
                style="@style/notification_item_image_style"/>
            <TextView
                android:id="@+id/notification_shortcut_name_0"
                style="@style/notification_item_text_style"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_shortcut_1"
            style="@style/notification_item_wrapper_style">
            <ImageView
                android:id="@+id/notification_shortcut_icon_1"
                style="@style/notification_item_image_style"/>
            <TextView
                android:id="@+id/notification_shortcut_name_1"
                style="@style/notification_item_text_style"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_shortcut_2"
            style="@style/notification_item_wrapper_style">
            <ImageView
                android:id="@+id/notification_shortcut_icon_2"
                style="@style/notification_item_image_style"/>
            <TextView
                android:id="@+id/notification_shortcut_name_2"
                style="@style/notification_item_text_style"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_shortcut_3"
            style="@style/notification_item_wrapper_style">
            <ImageView
                android:id="@+id/notification_shortcut_icon_3"
                style="@style/notification_item_image_style"/>
            <TextView
                android:id="@+id/notification_shortcut_name_3"
                style="@style/notification_item_text_style"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/notification_shortcut_setting"
        android:layout_centerVertical="true"
        android:src="@drawable/notification_shortcut_more"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>